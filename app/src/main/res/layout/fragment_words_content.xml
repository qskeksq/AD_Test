<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <EditText
        android:id="@+id/txt_words_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="title"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/txt_word_phrase"
        android:layout_width="40dp"
        android:layout_height="35sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="phrs"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/txt_word_chap"
        app:layout_constraintTop_toTopOf="@+id/txt_word_chap" />

    <EditText
        android:id="@+id/txt_word_chap"
        android:layout_width="40dp"
        android:layout_height="35sp"
        android:ems="10"
        android:hint="chap"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/txt_word_book"
        android:layout_marginTop="-5dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_word_book"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/txt_word_book"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="book"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_words_title"
        android:layout_marginLeft="131dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_words_title" />

    <EditText
        android:id="@+id/txt_words_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:gravity="top|left"
        android:hint="words"
        android:inputType="textMultiLine|textPersonName"
        android:padding="14dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_word_book"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/txt_words_summary" />

    <EditText
        android:id="@+id/txt_words_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="summary"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>